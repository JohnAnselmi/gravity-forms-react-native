{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "lib": ["ES2017", "DOM"],
    "declaration": true,
    "outDir": "./dist",
    "jsx": "react-native",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
